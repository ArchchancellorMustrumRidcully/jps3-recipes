<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest VueScan. This recipe downloads the 64-bit version by default. If you wish the 32-bit version, be sure to specify "-k ARCH=32" to your autopkg run command.</string>
	<key>Identifier</key>
	<string>com.github.lu-mac-admins.download.VueScan</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>VueScan</string>
        <key>DOWNLOAD_URL_STUB</key>
        <string>http://www.hamrick.com</string>
		<key>ARCH</key>
		<string>64</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.2.9</string>
	<key>Process</key>
	<array>
	    <dict>
	        <key>Processor</key>
	        <string>URLTextSearcher</string>
	        <key>Arguments</key>
	        <dict>
	            <key>url</key>
	            <string>http://www.hamrick.com</string>
	            <key>re_pattern</key>
				<string>"(files/vuex%ARCH%.+\.dmg)"</string>
	        </dict>
	    </dict>
		<dict>
			<key>Processor</key>
			<string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%url%/%match%</string>
            </dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>EndOfCheckPhase</string>
		</dict>
	</array>
</dict>
</plist>
