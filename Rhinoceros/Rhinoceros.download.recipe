<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Description</key>
		<string>Downloads the latest version Rhinoceros, and checks for a valid code signature.</string>
		<key>Identifier</key>
		<string>com.github.jps3.download.Rhinoceros</string>
		<key>Input</key>
		<dict>
			<key>NAME</key>
			<string>Rhinoceros</string>
			<key>DOWNLOAD_URL</key>
			<string>http://www.rhino3d.com/download/rhino-for-mac/5.0/wip</string>
			<key>REGISTRANT_EMAIL_ADDRESS</key>
			<string>put_your_email@here.now</string>
		</dict>
		<key>MinimumVersion</key>
		<string>0.4.0</string>
		<key>Process</key>
		<array>
			<dict>
				<key>Processor</key>
				<string>RhinocerosUrlProvider</string>
				<key>Arguments</key>
				<dict>
					<key>download_form_url</key>
					<string>%DOWNLOAD_URL%</string>
					<key>registrant_email</key>
					<string>%REGISTRANT_EMAIL_ADDRESS%</string>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>URLDownloader</string>
				<key>Arguments</key>
				<dict>
					<key>url</key>
					<string>%url%</string>
					<key>filename</key>
					<string>%NAME%.dmg</string>
				</dict>
			</dict>
			<dict>
				<key>Processor</key>
				<string>FileCreator</string>
				<key>Arguments</key>
				<dict>
					<key>file_path</key>
					<string>%RECIPE_CACHE_DIR%/rhinoceros_registration</string>
					<key>file_content</key>
                    <string>%license_code%
</string>
				</dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>CodeSignatureVerifier</string>
                <key>Arguments</key>
                <dict>
                    <key>input_path</key>
                    <string>%pathname%/%NAME%.app</string>
                    <key>requirement</key>
                    <string>identifier "com.mcneel.rhinoceros" and anchor apple generic and certificate 1[field.1.2.840.113635.100.6.2.6] /* exists */ and certificate leaf[field.1.2.840.113635.100.6.1.13] /* exists */ and certificate leaf[subject.OU] = D6XDM4N99E</string>
                </dict>
            </dict>
			<dict>
				<key>Processor</key>
				<string>EndOfCheckPhase</string>
			</dict>
		</array>
	</dict>
</plist>
